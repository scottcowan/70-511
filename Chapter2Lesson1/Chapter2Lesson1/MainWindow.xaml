<Window x:Class="Chapter2Lesson1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        TextBoxBase.TextChanged="MainWindow_OnTextChanged">
    <StackPanel TextBoxBase.TextChanged="TextBoxBase_OnTextChanged" Background="CornflowerBlue">
        <TextBox Height="23" Name="textBox1" Width="120" TextChanged="TextBox1_OnTextChanged" />
        <RadioButton Height="16" Name="radioButton1" VerticalAlignment="Top" >Handle Textbox.Changed in TextBox</RadioButton>
        <RadioButton Height="16" Name="radioButton2" VerticalAlignment="Top">Handle Textbox.Changed in StackPanel</RadioButton>
        <RadioButton  Height="16" Name="radioButton3" VerticalAlignment="Top">Handle TextBox.TextChanged in Window</RadioButton>
    </StackPanel>
</Window>
